<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:gravity="center_vertical"
            android:text="Account Setting"
            android:textColor="#607d8b"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_setting_account_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="550dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_save_diskette" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#1a000000"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:isScrollContainer="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:gravity="center_vertical"
                android:text="ID"
                android:textColor="#607d8b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current"
                    android:textColor="#a3a3a3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/oldIdTextView"
                    android:layout_width="430dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="330dp"
                    android:background="@drawable/rect_selector"
                    android:inputType="number|phone"
                    android:singleLine="true"
                    android:textColor="#a3a3a3"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textColor="#a3a3a3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newIdEditText"
                    android:layout_width="430dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="355dp"
                    android:background="@drawable/rect_selector"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:gravity="center_vertical"
                android:text="Password"
                android:textColor="#607d8b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current"
                    android:textColor="#a3a3a3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/oldPasswordEditText"
                    android:layout_width="430dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="330dp"
                    android:background="@drawable/rect_selector"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textColor="#a3a3a3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/newPasswordEditText"
                    android:layout_width="430dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="355dp"
                    android:background="@drawable/rect_selector"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="72dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retype Password"
                    android:textColor="#a3a3a3"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/retypePasswordEditText"
                    android:layout_width="430dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="240dp"
                    android:background="@drawable/rect_selector"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>