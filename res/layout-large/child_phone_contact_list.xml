<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/profile_image_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/contact_image_image_view"
            android:layout_width="55dp"
            android:layout_height="55dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image_linear_layout"
        android:layout_alignTop="@id/profile_image_linear_layout"
        android:layout_alignBottom="@id/profile_image_linear_layout"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contact_display_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_contact_name"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_device_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_contact_detail"
            android:textColor="#90908f"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>