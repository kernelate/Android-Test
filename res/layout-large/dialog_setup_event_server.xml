<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px" >

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SERVER INFORMATION"
            android:textColor="#616161"
            android:textSize="16sp"/>

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btn_connect"
            android:layout_width="104dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:background="@drawable/corner_button_style"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="10dp"
        android:background="#616161"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:layout_marginTop="8px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:text="Address"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/choose_protocol_spinner"
            android:layout_width="90px"
            android:layout_height="40px"
             >
        </Spinner>

        <EditText
            android:hint="doubango.org"
            android:id="@+id/editText_eventServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:textColor="#616161"
            android:textSize="18sp" />
        
    </LinearLayout>
    
    <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70px"
                android:layout_marginRight="40px"
                android:background="#1a000000"
                android:orientation="vertical" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:layout_marginTop="10px"
        android:text="Port"
        android:textColor="@color/color_black"
        android:textSize="16sp" />

    <EditText
        android:hint="5060"
        android:id="@+id/editText_eventPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:textColor="#616161"
        android:textSize="18sp" />
    
    <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="70px"
                android:layout_marginRight="40px"
                android:background="#1a000000"
                android:orientation="vertical" />

</LinearLayout>