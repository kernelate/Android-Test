            <Button
                android:id="@+id/phone_settings_button_device_volume_control"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@color/color_white"
                android:gravity="left|center_vertical"
                android:text="Event Settings"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="#1a000000"
                android:orientation="vertical" />
            -->

            <Button
                android:id="@+id/phone_settings_button_device_volume_control"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@color/color_white"
                android:gravity="left|center_vertical"
                android:text="Email Notification"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="#1a000000"
                android:orientation="vertical" />
            -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="32dp"
                android:text="ADMINISTRATION"
                android:textColor="#616161"
                android:textSize="16sp"
                android:visibility="gone" />

            <!--
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="#1a000000"
                android:orientation="vertical" />
            -->

            <Button
                android:id="@+id/phone_settings_button_device_login_settings"
                android:layout_width="fill_parent"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@color/color_white"
                android:gravity="left|center_vertical"
                android:text="Change Login Settings"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="#1a000000"
                android:orientation="vertical" />
            -->

        </RelativeLayout>
    </ScrollView>

</LinearLayout>