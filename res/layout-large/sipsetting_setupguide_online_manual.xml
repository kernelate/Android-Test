<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="820dp"
    android:layout_height="510dp"
    android:layout_gravity="center"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/setupguide_header"
        android:layout_width="fill_parent"
        android:layout_height="108dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/setupguide_pbxsetting_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Setup Guide"
            android:textColor="#212121"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/setupguide_rg"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/setupguide_header" >

        <RadioButton
            android:id="@+id/setupguide_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:checked="true"
            android:paddingLeft="20dp"
            android:text="Online Auto Setup"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <RadioButton
            android:id="@+id/setupguide_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"
            android:text="Manual Setup"
            android:textColor="@android:color/black"
            android:textSize="36sp" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/sipsetting_pbx_linear"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@+id/setupguide_rg"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/setupguide_cancel"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="380dp"
            android:background="@android:color/transparent"
            android:text="No"
            android:textColor="#607d8b"
            android:textSize="36sp" />

        <Button
            android:id="@+id/setupguide_ok"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Yes"
            android:textColor="#607d8b"
            android:textSize="36sp" />
    </LinearLayout>

</RelativeLayout>