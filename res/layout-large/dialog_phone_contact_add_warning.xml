<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_layout_style"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="3" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/phone_textview_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/string_warning"
            android:textColor="#29b6f6"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/phone_textview_warning"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#29b6f6"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/phone_textview_warning_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/string_warning_message"
            android:textColor="@color/color_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#b2b2b2"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/phone_contact_button_warning_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_layout_style"
        android:text="@string/string_ok"
        android:textColor="@color/color_black"
        android:textSize="20sp" />

</LinearLayout>