<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" >

    <TextView
        android:id="@+id/dt_client_myprofile_title"
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:gravity="center_vertical"
        android:paddingLeft="32dp"
        android:text="My Profile"
        android:textColor="#607d8b"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dt_client_myprofile_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="750dp"
        android:background="@drawable/btn_save_selector" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/dt_client_myprofile_title"
        android:layout_marginLeft="5dp"
        android:background="#616161"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dt_client_myprofile_title"
        android:fadeScrollbars="false"
        android:scrollbarSize="100dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dt_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:text="Account"
                android:textColor="#607d8b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/dt_ll_account"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/dt_account_tv"
                android:layout_marginLeft="5dp"
                android:background="#1a000000"
                android:orientation="vertical"
                android:visibility="invisible" >
            </LinearLayout>

            <TextView
                android:id="@+id/dt_callid"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/dt_ll_account"
                android:background="@drawable/settings_selector"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:text="Call ID"
                android:textColor="#a3a3a3"
                android:textSize="30sp" />
            <!-- rmaqlc19 -->

            <EditText
                android:id="@+id/dt_et_callid"
                android:layout_width="400dp"
                android:layout_height="52dp"
                android:layout_alignBaseline="@+id/dt_callid"
                android:layout_marginLeft="400dp"
                android:background="@drawable/rect_selector"
                android:textColor="@color/color_black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dt_tv_password"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/dt_callid"
                android:background="@drawable/settings_selector"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:text="Password"
                android:textColor="#a3a3a3"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/dt_et_password"
                android:layout_width="400dp"
                android:layout_height="52dp"
                android:layout_alignBaseline="@+id/dt_tv_password"
                android:layout_below="@+id/dt_tv_password"
                android:layout_marginLeft="400dp"
                android:background="@drawable/rect_selector"
                android:textColor="@color/color_black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dt_sipserver_tv"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/dt_tv_password"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:text="SIP Server"
                android:textColor="#607d8b"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/dt_ll_sipserver"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/dt_sipserver_tv"
                android:layout_marginLeft="5dp"
                android:background="#1a000000"
                android:orientation="vertical"
                android:visibility="invisible" >
            </LinearLayout>

            <TextView
                android:id="@+id/dt_tv_ipadd"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/dt_ll_sipserver"
                android:background="@drawable/settings_selector"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:text="IP Address"
                android:textColor="#a3a3a3"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/dt_et_ipadd"
                android:layout_width="400dp"
                android:layout_height="52dp"
                android:layout_alignBaseline="@+id/dt_tv_ipadd"
                android:layout_below="@+id/dt_et_password"
                android:layout_marginLeft="400dp"
                android:background="@drawable/rect_selector"
                android:textColor="@color/color_black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/dt_tv_port"
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/dt_tv_ipadd"
                android:background="@drawable/settings_selector"
                android:gravity="center_vertical"
                android:paddingLeft="32dp"
                android:text="Port"
                android:textColor="#a3a3a3"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/dt_et_port"
                android:layout_width="400dp"
                android:layout_height="52dp"
                android:layout_alignBaseline="@+id/dt_tv_port"
                android:layout_below="@+id/dt_et_ipadd"
                android:layout_marginLeft="400dp"
                android:background="@drawable/rect_selector"
                android:textColor="@color/color_black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/dt_showpass"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="720dp"
                android:layout_marginTop="205dp" />

