<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_callscreen">
    
    <LinearLayout 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
        
        <TextView 
            android:id="@+id/fragment_call_trying_text_view_info"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:text="@string/string_call_incoming"/>
        
        <ImageView 
            android:id="@+id/fragment_call_trying_image_view_caller"
            android:layout_height="330px"
            android:layout_width="330px"
            android:scaleType="fitXY"
            android:background="@drawable/img"
            android:layout_marginTop="15dp"/>
        
        <TextView 
            android:id="@+id/fragment_call_trying_text_view_caller"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:textSize="40px"
            android:text="@string/string_contact_sample"
            android:layout_marginTop="15dp"/>
        
<!--         <TextView  -->
<!--             android:id="@+id/fragment_call_trying_calling_label_text_view" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:textColor="#ffffff" -->
<!--             android:textSize="24px" -->
<!--             android:text="Calling.." -->
<!--             android:layout_marginTop="10dp"/> -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:gravity="center_horizontal|center_vertical" >

        
        
        <ImageButton
            android:id="@+id/fragment_call_trying_menu_button_answer"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:background="@drawable/btn_call_answer_pressed"
            android:src="@drawable/ic_voice_call" />
        
        <ImageButton
            android:id="@+id/fragment_call_trying_menu_button_decline"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_endcall_press"
            android:src="@drawable/ic_decline_call" />
        
        
    </LinearLayout>

</RelativeLayout>
