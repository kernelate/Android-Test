<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_layout_style"
    android:orientation="vertical"
    android:weightSum="2" >

    <TextView
        android:id="@+id/dialog_commont_textview_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16px"
        android:text="@string/string_succes"
        android:textColor="#29b6f6"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#29b6f6"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_commont_textview_success"
        android:layout_margin="16px"
        android:text="@string/string_successful"
        android:textColor="@color/color_black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#b2b2b2"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/dialog_common_button_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/corner_layout_style"
        android:text="@string/string_ok"
        android:textColor="@color/color_black"
        android:textSize="22sp" />

</LinearLayout>