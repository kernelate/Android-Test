<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="16px"
        android:weightSum="7" >

        <TextView
            android:id="@+id/automation_setting_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="EVENT DEVICE"
            android:textColor="#616161"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/fragment_setting_manual_button_connect"
                android:layout_width="104px"
                android:layout_height="32px"
                android:layout_marginRight="10px"
                android:background="@drawable/corner_button_style"
                android:text="@string/string_connect"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="8px"
        android:background="#1a000000"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/automation_setting_manual_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="8px"
        android:text="Address"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fragment_setting_manual_edittext_ip_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:layout_marginTop="8px"
        android:hint="@string/string_ip_hint"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textSize="18sp" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:background="#1a000000"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/automation_setting_manual_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="8px"
        android:text="@string/string_port"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fragment_setting_manual_edittext_port"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:layout_marginTop="8px"
        android:inputType="number"
        android:text="@string/string_port_hint"
        android:textColor="@color/color_black"
        android:textSize="18sp" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="70px"
        android:layout_marginRight="40px"
        android:background="#1a000000"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>