    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical" >

        <!--
             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="SIP ACCOUNT"
            android:textColor="#616161"
            android:textSize="16sp" />
        -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:gravity="center_vertical"
            android:text="Event Setting"
            android:textColor="#607d8b"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/setting_button_event_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="7"
            android:background="@drawable/btn_save_diskette" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="#1a000000"
        android:orientation="vertical" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:background="@drawable/settings_selector"
        android:gravity="center_vertical"
        android:paddingLeft="32dp"
        android:text="Event Server"
        android:textColor="#a3a3a3"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal" >

       <!--  <EditText
            android:id="@+id/fragment_settings_event_et1"
