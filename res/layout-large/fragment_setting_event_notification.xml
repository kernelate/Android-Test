        <ToggleButton
            android:id="@+id/fragment_settings_event_et1"
             android:layout_width="144dp"
            android:layout_height="52dp"
            android:background="@drawable/rect_selector"
            android:textColor="@color/color_black"
            android:textOn="http: //"
            android:textOff="https: //"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/fragment_settings_event_et2"
            android:layout_width="484dp"
            android:layout_height="52dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/rect_selector"
            android:hint="IP Address"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/fragment_settings_event_et3"
            android:layout_width="144dp"
            android:layout_height="52dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/rect_selector"
            android:hint="Port"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="Push Notification Accounts"
        android:textColor="#a3a3a3"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/fragment_setting_event_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="All"
            android:textColor="#b2b2b2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_setting_event_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Active"
            android:textColor="#b2b2b2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fragment_setting_event_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Pending"
            android:textColor="#b2b2b2"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/setting_listview_event_notification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px" />

</LinearLayout>