    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/rlTop"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="#1a000000"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/setting_layout_sensitivity_level"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:weightSum="5" >

                <TextView
                    android:id="@+id/motion_detection_title_text_desc_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/string_motion_detection"
                    android:textColor="#607d8b"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sensitivity_control_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Sensitivity Control"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <SeekBar
                        android:id="@+id/sensitivity_control"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:max="100"
                        android:padding="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#000000" >

                        <EditText
                            android:id="@+id/fragment_setting_security_function_button_number"
                            android:layout_width="104px"
                            android:layout_height="32px"
                            android:layout_margin="1dp"
                            android:background="#ffffff"
                            android:clickable="false"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="50"
                            android:textColor="#000000"
                            android:textCursorDrawable="@null"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="7" >

                <TextView
                    android:id="@+id/security_sensors_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:text="Security Sensors"
                    android:textColor="#607d8b"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--
                     <SeekBar
                    android:id="@+id/soundSeekBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="20dp" />
                -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/fragment_setting_security_function_button_security_sensor_save"
                        android:layout_width="104dp"
                        android:layout_height="32dp"
                        android:background="@drawable/corner_button_style"
                        android:text="@string/string_save"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fragment_setting_security_function_textview_door_control_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relay Option"
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_setting_security_function_textview_door_control_setting"
                        android:text="Door Access Control"
                        android:textColor="#616161"
                        android:textSize="18sp" />
                </LinearLayout>

                <ToggleButton
                    android:id="@+id/fragment_setting_security_function_toggle_door_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="450dp"
                    android:background="@drawable/no_nc"
                    android:textOff=""
                    android:textOn="" />
                <!-- </LinearLayout> -->
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/setting_layout_doorcontrol"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/fragment_setting_security_function_button_sensor_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:background="@color/color_white" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_textview_sensor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Notification Settings"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_tv_locked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="120dp"
                    android:layout_toRightOf="@+id/fragment_setting_security_function_cb_locked"
                    android:text="Locked"
                    android:textColor="#616161"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/fragment_setting_security_function_cb_locked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:button="@drawable/checkbox" />

                <EditText
                    android:id="@+id/fragment_setting_security_function_et_locked"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="650dp"
                    android:layout_marginTop="110dp"
                    android:background="@drawable/rect_selector"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_tv_locked_secs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="120dp"
                    android:layout_toRightOf="@+id/fragment_setting_security_function_et_locked"
                    android:text="secs"
                    android:textColor="#616161"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/fragment_setting_security_function_cb_unlocked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_setting_security_function_cb_locked"
                    android:layout_marginTop="30dp"
                    android:button="@drawable/checkbox" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_tv_unlocked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="200dp"
                    android:layout_toRightOf="@+id/fragment_setting_security_function_cb_unlocked"
                    android:text="Unlocked"
                    android:textColor="#616161"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/fragment_setting_security_function_et_unlocked"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="650dp"
                    android:layout_marginTop="190dp"
                    android:background="@drawable/rect_selector"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_tv_unlocked_secs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="200dp"
                    android:layout_toRightOf="@+id/fragment_setting_security_function_et_unlocked"
                    android:text="secs"
                    android:textColor="#616161"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_tv_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:text="Auto-Lock Timer"
                    android:textColor="#616161"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/fragment_setting_security_function_btn_auto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="270dp"
                    android:background="@drawable/btn_autolock" />

                <EditText
                    android:id="@+id/fragment_setting_security_function_et_auto"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="650dp"
                    android:layout_marginTop="270dp"
                    android:background="@drawable/rect_selector"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/fragment_setting_security_function_tv_auto_secs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="280dp"
                    android:layout_toRightOf="@+id/fragment_setting_security_function_et_auto"
                    android:text="secs"
                    android:textColor="#616161"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/fragment_setting_security_function_tv_auto" >
                </LinearLayout>
            </RelativeLayout>

