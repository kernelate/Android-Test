<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_device_email_adapter_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/setting_textview_email_list"
            android:layout_width="280px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/string_email_hint"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/setting_textview_alarm_list"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16px"
            android:layout_toRightOf="@id/setting_textview_email_list"
            android:text="Status Unknown"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/setting_email_notification_delete_imageview"
            android:layout_width="104px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:text="Discard"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#616161"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>