<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400px"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_layout_style"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bbbbbbbbbbbbbbbb" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/aaaaaaaaaaaaaaaaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="16px"
                    android:text="Change Login Settings"
                    android:textColor="#29b6f6"
                    android:textSize="22px" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="16px"
                    android:background="#29b6f6"
                    android:orientation="vertical"
                    android:textColor="#29b6f6" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:layout_marginTop="16px"
                android:text="@string/id"
                android:textColor="#616161"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginRight="16px" >

                <TextView
                    android:id="@+id/id_current_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:gravity="center_vertical"
                    android:text="@string/current"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_new_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/id_current_textview"
                    android:layout_below="@id/id_current_textview"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:text="@string/string_new"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/oldIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_current_textview"
                    android:layout_marginLeft="48px"
                    android:layout_toRightOf="@id/id_current_textview"
                    android:paddingLeft="10px"
                    android:text="@string/string_name"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignLeft="@id/oldIdTextView"
                    android:layout_below="@id/oldIdTextView"
                    android:layout_marginTop="16px"
                    android:background="#616161"
                    android:orientation="vertical" >
                </LinearLayout>

                <EditText
                    android:id="@+id/newIdEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/id_new_textview"
                    android:layout_alignLeft="@id/oldIdTextView"
                    android:background="@drawable/edittext_selector"
                    android:hint="new id"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:layout_marginTop="24px"
                android:text="@string/string_Password"
                android:textColor="#616161"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="16px" >

                    <TextView
                        android:id="@+id/password_current_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16px"
                        android:gravity="center_vertical"
                        android:text="@string/current"
                        android:textColor="@color/color_black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/password_new_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/password_current_textview"
                        android:layout_below="@id/password_current_textview"
                        android:layout_marginTop="20px"
                        android:gravity="center_vertical"
                        android:text="@string/string_new"
                        android:textColor="@color/color_black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/oldPasswordEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/password_current_textview"
                        android:layout_marginLeft="48px"
                        android:layout_marginTop="13dp"
                        android:layout_toRightOf="@id/password_current_textview"
                        android:background="@drawable/edittext_selector"
                        android:hint="current password"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textCursorDrawable="@null"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/newPasswordEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/password_new_textview"
                        android:layout_alignLeft="@id/oldPasswordEditText"
                        android:layout_marginTop="12px"
                        android:layout_toRightOf="@id/password_new_textview"
                        android:background="@drawable/edittext_selector"
                        android:hint="new password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textCursorDrawable="@null"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/retypePasswordEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/newPasswordEditText"
                        android:layout_below="@id/password_new_textview"
                        android:layout_marginTop="16px"
                        android:background="@drawable/edittext_selector"
                        android:hint="retype password"
                        android:singleLine="true"
                        android:textColor="@color/color_black"
                        android:textCursorDrawable="@null"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bbbbbbbbbbbbbbbb"
        android:layout_width="fill_parent"
        android:layout_height="55px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16px"
        android:background="#414141"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/saveButton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1px"
            android:layout_weight="2"
            android:background="@drawable/cornet_layout_button_style"
            android:gravity="center"
            android:text="@string/string_save"
            android:textColor="@color/color_black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_weight="1"
            android:background="@drawable/cornet_layout_button_style"
            android:gravity="center"
            android:text="@string/string_cancel"
            android:textColor="@color/color_black"
            android:textSize="22sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>