<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="16px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/string_caller"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/textView1"
            android:text="@string/string_information"
            android:textSize="20dp" />

        <Button
            android:id="@+id/phone_setting_button_add"
            android:layout_width="104px"
            android:layout_height="32px"
            android:layout_alignParentRight="true"
            android:background="@drawable/corner_button_style"
            android:text="@string/string_add" />
    </RelativeLayout>

    <ListView
        android:id="@+id/phone_setting_listview_inbound_call"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px" >
    </ListView>

</LinearLayout>