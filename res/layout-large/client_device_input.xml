<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="828dp"
    android:layout_height="510dp"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/client_input_header"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:paddingTop="32dp" >

        <TextView
            android:id="@+id/client_input_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:text="Setup Guide"
            android:textColor="#212121"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/setupguide_pbxsetting_txt"
        android:layout_marginLeft="5dp"
        android:background="#1a000000"
        android:orientation="vertical" >
    </LinearLayout>
    -->

    <TextView
        android:id="@+id/client_input_userid"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_below="@+id/client_input_header"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical"
        android:text="Enter Serial Key"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/client_input_et"
        android:layout_width="450dp"
        android:layout_height="64dp"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@+id/client_input_userid"
        android:layout_toRightOf="@+id/client_input_userid"
        android:background="@drawable/rect_selector"
        android:textColor="#424242"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/client_input_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/client_input_userid"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/client_input_cancel"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="380dp"
            android:background="@android:color/transparent"
            android:text="No"
            android:textColor="#607d8b"
            android:textSize="36sp" />

        <Button
            android:id="@+id/client_input_ok"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="Yes"
            android:textColor="#607d8b"
            android:textSize="36sp" />
    </LinearLayout>

</RelativeLayout>