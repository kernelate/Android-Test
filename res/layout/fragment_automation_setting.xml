<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView 
	    android:textSize="20sp"
        android:layout_marginLeft="15dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="My Door Devices"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="#616161"
        android:orientation="vertical" >
    </LinearLayout>
    
    <Button 
        android:id="@+id/automation_settings_button_device_list"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Device List"
        android:drawableRight="@drawable/avatar_24"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#616161"
        android:orientation="vertical" >
    </LinearLayout>
    
    <TextView 
	    android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Door Devices Configuration"/>
    
    <Button
        android:id="@+id/automation_settings_button_automatic" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Automation"
        android:drawableRight="@drawable/avatar_24"/>
    
    <Button 
        android:id="@+id/automation_settings_button_manual"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Manual"
        android:drawableRight="@drawable/avatar_24"/>
</LinearLayout>
