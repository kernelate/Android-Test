<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Network Type"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/phone_setting_textview_network_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="Ethernet/Cable"
        android:textColor="#555555"
        android:textSize="20sp" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="IP settings"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/phone_setting_textview_ip_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="Static"
        android:textColor="#555555"
        android:textSize="20sp" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SSID"
            android:textSize="25sp"
            />
        
        <Button 
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_setting_button_scan_ssid"
            android:text="Scan"
            />
    </RelativeLayout>
    
    <EditText 
        android:id="@+id/phone_setting_edittext_wifi_network"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Wifi Network"
        android:textSize="25sp"/>

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="25sp"/>
    
    <EditText 
        android:id="@+id/phone_setting_edittext_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="25sp"/>
    
    
    <TextView 
        android:text="Advance Options"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="IP Address"
        android:textSize="25sp"/>
    
    <EditText 
        android:id="@+id/phone_setting_edittext_ip_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="192.0.0.0"
        android:textSize="25sp"/>
    
	<TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gateway"
        android:textSize="25sp"/>
    
    <EditText 
        android:id="@+id/phone_setting_edittext_gateway"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="port"
        android:textSize="25sp"/>
    
    
    <Button 
        android:text="Save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_setting_button_add"
        android:textSize="25sp"/>
</LinearLayout>