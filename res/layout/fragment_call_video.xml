<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">
        
        <TextView 
            android:id="@+id/phone_call_video_textview_caller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jessica Alba"
            android:textSize="24px"
            android:textColor="#ffffff"/>
        
        <TextView 
            android:id="@+id/phone_call_video_textview_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122"
            android:textSize="16px"
            android:textColor="#ffffff"/>
        
    </LinearLayout>
    
    
        <VideoView 
            android:id="@+id/phone_call_video_videoview"
            android:layout_height="340px"
            android:layout_width="620px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
    

</RelativeLayout>


