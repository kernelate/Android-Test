<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:weightSum="5" >

    <LinearLayout
        android:layout_width="1100dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/dialpad_new_numberside_background" >

            <EditText
                android:id="@+id/phone_dialpad_edittext_dialed_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:cursorVisible="false"
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="34sp" />
        </LinearLayout>
        <!-- calling buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/phone_dialpad_button_immediate_forward"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_immediate_forward" />

            <ImageButton
                android:id="@+id/phone_dialpad_button_busy_forward"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4px"
                android:layout_marginRight="4px"
                android:background="@drawable/dialpad_busy_forward" />

            <ToggleButton
                android:id="@+id/phone_dialpad_button_donotdisturb"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:background="@drawable/dnd_toggle" />
        </LinearLayout>
        <!-- calling buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/phone_dialpad_button_call_pickup"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_call_pickup" />

            <ImageButton
                android:id="@+id/phone_dialpad_button_voicemail"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4px"
                android:layout_marginRight="4px"
                android:background="@drawable/dialpad_voicemail" />

            <ImageButton
                android:id="@+id/phone_dialpad_button_redial"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_redial" />
        </LinearLayout>
        <!-- calling buttons -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
             >

            <!--
                 <ImageButton
                android:id="@+id/phone_dialpad_button_emergency"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_new_emergency" />
            -->

            <ImageButton
                android:id="@+id/phone_dialpad_button_voice_call"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_new_voice_selector" />

            <ImageButton
                android:id="@+id/phone_dialpad_button_video_call"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_new_video_selector" />

            <ImageButton
                android:id="@+id/phone_dialpad_button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="8px"
                android:background="@drawable/dialpad_new_backspace_selector" />
        </LinearLayout>
    </LinearLayout>

    <!-- keyboard buttons -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@drawable/dialpad_new_buttonside_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/phone_dialpad_button_1"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_2"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_1"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_3"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_2"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="46sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/phone_dialpad_button_4"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_5"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_4"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_6"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_5"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="6"
                android:textColor="@android:color/black"
                android:textSize="46sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/phone_dialpad_button_7"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_8"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_7"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_9"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_8"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="9"
                android:textColor="@android:color/black"
                android:textSize="46sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/phone_dialpad_button_asterisk"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="*"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_0"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_asterisk"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="46sp" />

            <Button
                android:id="@+id/phone_dialpad_button_hash"
                android:layout_width="192dp"
                android:layout_height="144dp"
                android:layout_toRightOf="@+id/phone_dialpad_button_0"
                android:background="@drawable/dialpad_new_number_selector"
                android:gravity="center"
                android:text="#"
                android:textColor="@android:color/black"
                android:textSize="46sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>