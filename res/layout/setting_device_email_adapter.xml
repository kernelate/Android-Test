<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#ffffff">
    
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView
	        android:textColor="#000000"
	        android:text="abcd@yahoo.com" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/setting_textview_email_list"
	        android:textSize="24sp"/>
	    
	    <TextView
	        android:textColor="#000000"
	        android:textSize="20sp"
	        android:text="abcd@yahoo.com" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/setting_textview_alarm_list"/>
	    
	    
	</LinearLayout>
    
    
	<ImageView 
	    android:id="@+id/setting_email_notification_delete_imageview"
	    android:src="@drawable/delete_48"
	    android:contentDescription="delete image"
	    android:layout_alignParentRight="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"/>
	
</RelativeLayout>
